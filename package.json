{
  "name": "whatdayisit",
  "version": "1.3.0",
  "description": "Chrome extension that highlights dates and shows day of week",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run lint && npm run format:check && npm run test",
    "build": "node scripts/build.js",
    "package": "npm run check && npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "archiver": "^7.0.0",
    "eslint": "^9.0.0",
    "jsdom": "^25.0.0",
    "prettier": "^3.0.0",
    "vitest": "^2.0.0"
  }
}
